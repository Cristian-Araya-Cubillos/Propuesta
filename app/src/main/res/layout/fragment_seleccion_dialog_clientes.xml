<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/FrameSeleccion"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Vista.Dialog.SeleccionDialogClientes">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/IB_FCL_Salir"
                android:layout_width="67dp"
                android:layout_height="wrap_content"
                android:scaleType="fitCenter"
                android:src="@android:drawable/btn_dialog"
                tools:ignore="SpeakableTextPresentCheck" />

            <TextView
                android:id="@+id/TV_FCL_Seleccion"
                android:layout_width="303dp"
                android:layout_height="wrap_content"
                android:text="@string/F_CL_Seleccion"
                android:textAlignment="center"
                android:textSize="28sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_FCL_Modificar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Modificar" />

            <Button
                android:id="@+id/btn_FCL_Eliminar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="20px"
                android:text="Eliminar" />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>